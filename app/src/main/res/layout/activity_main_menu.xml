<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:round_image="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

        <include layout="@layout/layout_navigation" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="MissingDefaultResource">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:id="@+id/img_program"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <com.zappkit.zappid.views.RoundedConnerImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:layout_gravity="center"
                            android:contentDescription="@string/tv_program"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_background_program"
                            round_image:border_color="#fff"
                            round_image:border_width="1dp"
                            round_image:corner_radius="@dimen/dp_10" />

                        <com.zappkit.zappid.views.CustomFontButton
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="@dimen/height_btn_menu"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/height_btn_menu_haft"
                            android:background="@drawable/bg_font_main_menu"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20"
                            android:text="@string/tv_program"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium_15"
                            android:textStyle="bold"
                            android:visibility="gone"
                            font:fontText="font_helvetica_neue_bold.otf" />
                    </LinearLayout>

                    <com.zappkit.zappid.views.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/tv_title_program_menu_main"
                        android:textColor="@color/color_text"
                        android:textSize="@dimen/text_small_10"
                        android:visibility="gone"
                        font:fontText="font_helvetica_neue_bold.otf" />

                    <LinearLayout
                        android:id="@+id/img_frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <com.zappkit.zappid.views.RoundedConnerImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:layout_gravity="center"
                            android:contentDescription="@string/tv_frequencies"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_background_frequencies"
                            round_image:border_color="#fff"
                            round_image:border_width="1dp"
                            round_image:corner_radius="@dimen/dp_10" />

                        <com.zappkit.zappid.views.CustomFontButton
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="@dimen/height_btn_menu"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/height_btn_menu_haft"
                            android:background="@drawable/bg_font_main_menu"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20"
                            android:text="@string/tv_frequencies"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium_15"
                            android:textStyle="bold"
                            android:visibility="gone"
                            font:fontText="font_helvetica_neue_bold.otf" />
                    </LinearLayout>

                    <com.zappkit.zappid.views.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/tv_title_frequency_menu_main"
                        android:textColor="@color/color_text"
                        android:textSize="@dimen/text_small_10"
                        android:visibility="gone"
                        font:fontText="font_helvetica_neue_bold.otf" />

                    <LinearLayout
                        android:id="@+id/img_my_rife"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150">

                            <com.zappkit.zappid.views.RoundedConnerImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:contentDescription="@string/tv_my_rife_app"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_backround_myrife"
                                round_image:border_color="#fff"
                                round_image:border_width="1dp"
                                round_image:corner_radius="@dimen/dp_10" />

                            <View
                                android:id="@+id/view_disable_custom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shap_bg_image_dim_not_selected" />
                        </FrameLayout>


                        <com.zappkit.zappid.views.CustomFontButton
                            android:id="@+id/btn_custom"
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="@dimen/height_btn_menu"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/height_btn_menu_haft"
                            android:background="@drawable/bg_font_main_menu"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20"
                            android:text="@string/txt_custom"
                            android:textColor="#707070"
                            android:textSize="@dimen/text_medium_15"
                            android:textStyle="bold"
                            android:visibility="gone"
                            font:fontText="font_helvetica_neue_bold.otf" />
                    </LinearLayout>

                    <com.zappkit.zappid.views.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/tv_title_my_rife_menu_main"
                        android:textColor="@color/color_text"
                        android:textSize="@dimen/text_small_10"
                        android:visibility="gone"
                        font:fontText="font_helvetica_neue_bold.otf" />

                    <LinearLayout
                        android:id="@+id/img_my_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.zappkit.zappid.views.RoundedConnerImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_170"
                                android:layout_gravity="center"
                                android:contentDescription="@string/tv_my_rife_app"
                                android:scaleType="fitXY"
                                android:src="@drawable/qilife_image"
                                round_image:corner_radius="@dimen/dp_10" />

                        </FrameLayout>


                        <com.zappkit.zappid.views.CustomFontButton
                            android:id="@+id/btn_shop"
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="@dimen/height_btn_menu"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/height_btn_menu_haft"
                            android:background="@drawable/bg_font_main_menu"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20"
                            android:text="@string/txt_shop"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium_15"
                            android:textStyle="bold"
                            android:visibility="gone"
                            font:fontText="font_helvetica_neue_bold.otf" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@android:color/white" />
                </LinearLayout>

                <!-- Flash sale -->
                <RelativeLayout
                    android:id="@+id/flash_sale"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_time_flash_sale_bg"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/mTvDurationCountDown"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical|center"
                        android:orientation="horizontal">

                        <com.zappkit.zappid.views.CustomFontTextView
                            android:id="@+id/flash_sale_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:background="@drawable/ic_time_flash_sale_rec"
                            android:padding="2dp"
                            android:text="10"
                            android:textColor="#000"
                            android:textSize="11sp"
                            app:fontText="fonts/MyriadPro_Bold.otf"
                            tools:ignore="HardcodedText,SmallSp" />

                        <com.zappkit.zappid.views.CustomFontTextView
                            android:id="@+id/flash_sale_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/ic_time_flash_sale_rec"
                            android:padding="2dp"
                            android:text="10"
                            android:textColor="#000"
                            android:textSize="11sp"
                            app:fontText="fonts/MyriadPro_Bold.otf"
                            tools:ignore="HardcodedText,SmallSp" />

                        <com.zappkit.zappid.views.CustomFontTextView
                            android:id="@+id/flash_sale_seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:background="@drawable/ic_time_flash_sale_rec"
                            android:padding="2dp"
                            android:text="10"
                            android:textColor="#000"
                            android:textSize="11sp"
                            app:fontText="fonts/MyriadPro_Bold.otf"
                            tools:ignore="HardcodedText,SmallSp" />
                    </LinearLayout>

                    <com.zappkit.zappid.views.CustomFontTextView
                        android:id="@+id/mTvDurationCountDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/ic_time_flash_sale_bg_black"
                        android:padding="2dp"
                        android:text="@string/txt_flash_sale"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        app:fontText="fonts/MyriadPro_Bold.otf"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toStartOf="@+id/mTvDurationCountDown"
                        android:layout_toLeftOf="@+id/mTvDurationCountDown"
                        android:src="@drawable/ic_time_flash_sale_on"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/banner_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#ffffff">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/qicoil_banner" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ads_icon" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_left_menu"
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bg_list_menu"
        android:clickable="true"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
