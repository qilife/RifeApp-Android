<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:font="http://schemas.android.com/apk/res-auto">

    <com.zappkit.zappid.views.CustomFontTextView
        android:id="@+id/mySeqName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/text_small_14"
        android:textColor="@color/color_text"
        font:fontText="font_helvetica_neue.otf" />

    <ImageView
        android:id="@+id/mySeqDeletebtn"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@null"
        android:contentDescription="@string/repeatDescript"
        android:focusable="false"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/mySeqEditBtn"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toLeftOf="@+id/mySeqDeletebtn"
        android:layout_toStartOf="@+id/mySeqDeletebtn"
        android:background="@null"
        android:contentDescription="@string/repeatDescript"
        android:focusable="false"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:src="@drawable/ic_edit" />
</RelativeLayout>
